        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "/^(feat|fix|docs|style|refactor|perf|test|chore|build|ci|revert)(\\(.+\\))?: .+/i",
                    "error": "A mensagem de commit deve seguir o padr√£o Conventional Commits (ex: 'feat(auth): add login')."
